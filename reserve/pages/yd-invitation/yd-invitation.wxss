.all{
  height: 100%;
  overflow: hidden;
  position: relative;
}

.all .one{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
}

.sitem1{
  transform: translate(0,100%);
}

.sitem3{
  transform: translate(0,200%);
}

.one{
  transform: translate(0,-100%);
  transition: all 1s ease-in-out;
  overflow: hidden;
}
.one.in{
  transform: translate(0,0);
  z-index: 1;
}
 .in ~ .one{
  transform: translate(0,100%);
} 
.sitem3-title2-left{
