.hotel-info{
  margin-top:20rpx;
  padding:0 30rpx;
  background-color:#fff;
}
.hotel-info view{
  display:flex;
  flex-direction: row;
  height:80rpx;
  line-height:80rpx;
  border-bottom:1px solid #f1f1f1;
  font-size:32rpx;
  color:#666;
}
.hotel-info view text:nth-child(1){
  flex:0 0 200rpx;
}
.hotel-info view text:nth-child(2){
  display:block;
  width:100%;
  text-align:right;
}
.tip{
  padding-top:10rpx;
  font-size:24rpx;
  line-height:28rpx;
  color:#e84540;
}
.reserve-info,
.invitation-info{
  margin-top:20rpx;
  padding:0 30rpx;
  background-color:#fff;
}
.invitation-info{
  margin-bottom:120rpx;
}
.reserve-info view,
.invitation-info view{
  display:flex;
  flex-direction: row;
  position:relative;
  height:80rpx;
  line-height:80rpx;
  font-size:32rpx;
  color:#666;
  border-bottom:1px solid #f1f1f1;
}
.reserve-info view text,
.invitation-info view text{
  flex:0 0 200rpx;
  display:inline-block;
}
.reserve-info view input,
.invitation-info view input{
  flex:1;
  margin-top:15rpx;
  text-align:right;
}
.invitation-info view switch{
  position:absolute;
  top:0;
  right:0;
}
.invitation-info view:last-child{
  height:200rpx;
}
.invitation-info textarea{
  display:block;
  height:100%;
  line-height:28rpx;
  padding:20rpx 0;
}
.buttom{
  position:fixed;
  bottom:0;
  left:0;
  height:100rpx;
  line-height:100rpx;
  width:100%;
  display:flex;
  flex-direction: row;
  background-color:#fff;
  border-top:1px solid #f1f1f1;
  z-index:10;
}
.buttom text{
  flex:1;
  text-align:center;
}
.price{
  color:#e84540;
}
.comfirm{
  background-color:#4fc08d;
  color:#fff;
}
.title text{
  color:#333;
  width:100%;
  font-size:34rpx;
}