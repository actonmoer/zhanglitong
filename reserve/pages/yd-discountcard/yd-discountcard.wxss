page{
  box-sizing: border-box;
}
.yd-card{
  margin: 40rpx 30rpx 0;
}
.yd-card image{
  width: 100%;
  height: 260rpx; 
}
.yd-card .yd-font{
  height: 120rpx;
  width: 100%;
  background: #fff;
  font-size: 42rpx;
  text-align: center;
  line-height: 120rpx;
  margin-top: -8rpx;
  color: #eb4848;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}
.yd-btn{
  background: #3d95e5;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  padding: 12rpx 24rpx;
  margin: 40rpx 30rpx 0;
  border-radius: 12rpx;
}
.yd-explain{
  position: fixed;
  bottom: 40rpx;
  right: 46rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, .5);
  border-radius: 100%;
  font-size: 22rpx;
  text-align: center;
  padding-top: 10rpx;
  color: #fff;
  box-sizing: border-box;
}
.yd-bj{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0,0,0,.5);
}
.yd-tips{
  position: fixed;
  color: #000;
  top: 10%;
  background: #fff;
  margin: 0 100rpx;
}
.yd-tips-title{
  background: #3d95e5;
  color: #fff;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 32rpx;
}
.yd-tips-content{
  font-size: 28rpx;
  padding: 80rpx 40rpx;
}
.yd-tips-content view{
  text-indent: 2em;
}
.yd-tips-content view text{
  color: #3d95e5;
  font-weight: 700;
}
.yd-close{
  position: fixed;
  left: 50%;
  margin-left: -40rpx;
}