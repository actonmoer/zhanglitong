/* 搜索 */
.search-box{
  position:fixed;
  top:0;
  left:0;
  display:flex;
  flex-direction: row;
  width:100%;
  height:100rpx;
  z-index:100;
  border-bottom:1px solid #ccc;
  background:#4fc08d;
}

.search{
  position:relative;
  width:100%;
  padding:0 60rpx;
}
.search input{
  margin-top:20rpx;
  height:60rpx;
  font-size:24rpx;
  border-radius:30rpx;
  padding-left:70rpx;
  background:#fff;
}
.search-icon{
  position:absolute;
  top:36rpx;
  left:90rpx;
}
/* 搜索结果为空 */
.search-empty{
  font-size:26rpx;
  color:#666;
  height:60rpx;
  line-height:60rpx;
  text-align:center;
  background:#fff;
  margin-bottom:30rpx;
}
/* 热门搜索 */
.search-hot{
  padding:10rpx 20rpx 20rpx;
  background-color:#fff;
}
.hot-title text{
  font-size:30rpx;
}
.hot-cont{
  margin:30rpx;
}
.hot-item{
  display:inline-block;
  margin:0 20rpx 15rpx 0;
  padding:10rpx 20rpx;
  font-size:28rpx;
  color:#666;
  border-radius:4px;
  border:1px solid #ccc; 
}

/* 搜索列表 */
.search-list{
  margin-top:100rpx;
}
.search-item{
  display:flex;
  flex-direction: row;
  
}
.shop-image{
  margin-bottom: 20rpx;
  background: #fff;
}
.shop-cen1{
  margin:20rpx 0; 
  background:#fff;
}
.shop-cen{
  display: flex;
   border-bottom:1px solid #eee;
}
.shop-image{
  width:100rpx;
  height:100rpx;
  margin:30rpx 30rpx; 
}
.shop-image image{
  width:100%;
  height:100%;
}

.shop-images{
  width:185rpx;
  height:185rpx;
  margin:30rpx 30rpx; 
}
.shop-images image{
  width:100%;
  height:100%;
}



.shop-name{
  margin:30rpx 0 0 30rpx; 
  height:100rpx;
  line-height:100rpx;
  font-size:30rpx;
  font-weight: 600;
  color:#333;
  
}

.shop-names_a{
  margin:30rpx 0 0 0;
}

.shop-na{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;  
}
.shop-names{
  height:60rpx;
  line-height:60rpx;
  font-size:30rpx;
  color:#333;
  
}

.shop-namess{
  height:60rpx;
  line-height:60rpx;
  font-size:26rpx;
  color:#333;
}