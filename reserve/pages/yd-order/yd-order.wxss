.order-container {
  display: flex;
  flex-direction: column;
  height: 65rpx;
  line-height: 65rpx;
  width: 100%;
}

/* 头部导航 */
 .nav {
  flex:0 0 65rpx;
  display: flex;
  flex-direction: row;
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:80rpx;
  line-height:80rpx;
  z-index:10;
  background: #fff;
  border-bottom:1px solid #eee;
  box-shadow: 0 2px 3px #eee;
}

.nav text {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
}  
.nav-active{
  color:#4fc08d;
}

/* 订单列表 */
.order-list{
  margin:85rpx 0 20rpx;
}
.order-item {
  margin-top: 20rpx;
  padding: 0 30rpx;
  background-color: #fff;
}

.order-top {
  height:80rpx;
  line-height:80rpx;
  border-bottom: 1px solid #eee;
} 
.order-num{
  font-weight:500;
  font-size:30rpx;
}
.order-status{
  float:right;
  color:#4fc08d;
  font-size:26rpx;
}
.order-bottom{
  display:flex;
  flex-direction: row;
  padding:30rpx 0;
}
.order-img{
  flex:0 0 200rpx;
  width:200rpx;
  height:200rpx;
}
.order-img image{
  width:100%;
  height:100%;
  background-color:#eee;
}
.order-content{
   width:100%;
   padding-left:20rpx;
   color:#666;
}
.order-content text{
  display:block;
  line-height:28rpx;
}
.order-contact{
  font-size:26rpx;
  color:#333;
}
.order-time{
  font-size:26rpx;
  margin:20rpx 0 30rpx;
}
.order-price{
  font-size:32rpx;
  color:#ff3752;
}
.invitation-price{
  font-size:26rpx;
  margin-bottom:20rpx;
}

/* 没登录 */
.no-login{
  margin-top:300rpx;
  text-align:center;
}
.no-login .login-text{
  display:block;
  font-size:30rpx;
  color:#777;
}
.no-login .login-btn{
  display:block;
  width:200rpx;
  padding: 5rpx 15rpx;
  margin:10rpx auto 0;
  font-size:28rpx;
  background-color:#4fc08d;
  color:#fff;
  border-radius:4rpx;
}